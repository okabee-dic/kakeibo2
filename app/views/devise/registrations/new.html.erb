<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username , id: :username %>
    <p id="username_checkresult"></p>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
  <div class="field">
    <%= f.label :sex %>
    <%= f.select :sex, [ ["", 0], ["男性", 1], ["女性", 2], ["その他", 3] ] %>
  </div>
  
  <div class="field">
    <%= f.label :country %><br />
    <%= f.country_select :country, priority_countries: ["JP", "US"] %>
  </div>
  
  <div class="field">
    <%= f.label :postcode %>
    <%= f.text_field :postcode , id: :postcode  %>
  </div>
  
  <div class="field">
    <%= f.label :prefecture_id %>
    <%= f.collection_select :prefecture_name, JpPrefecture::Prefecture.all, :name, :name, id: :prefecture_name %>
  </div>
  
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address , id: :address%>
  </div>
  
  <div class="field">
    <%= f.label :building %>
    <%= f.text_field :building, id: :building %>
  </div>
  
  <div class="field">
    <%= f.label :telephone %>
    <%= f.text_field :telephone %>
  </div>
  
  <div class="field">
    <%= f.label :corporatename %>
    <%= f.text_field :corporatename %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
